@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist
@using HairSalon.Models

<h2>Stylist Details:</h2>
<hr />
<p>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</p>
<p>@Html.DisplayNameFor(model => model.Specialty): @Html.DisplayFor(model => model.Specialty)</p>

@if(Model.Customers.Count == 0)
{
  <h5>There are no customers line up for this stylist, add one below.</h5>
}
<ul>
  @foreach (Customer customer in Model.Customers)
  {
    <li>@Html.ActionLink($"{customer.Name}", "Details", "Customer", new { id = customer.CustomerId })</li>
  }
</ul>

<p>@Html.ActionLink("Add New Customer", "Create", "Customer", new { id = Model.StylistId})</p>
<p>@Html.ActionLink("Edit Stylist", "Edit", new { id = Model.StylistId })</p>
<p>@Html.ActionLink("Delete Stylist", "Delete", new { id = Model.StylistId })</p>
<p>@Html.ActionLink("Back to Stylists", "Index")</p>
<p>@Html.ActionLink("Back Home", "Index", "Home")</p>