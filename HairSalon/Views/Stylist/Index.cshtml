@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@* @model List<Restaurant.Models.Cuisine>; *@

<h1>Stylist List</h1>

@if (@Model.Count == 0)
{
  <h5>Please add a stylist to the list</h5>
} 

<ul>
  @foreach(Stylist stylist in Model)
  {
    <li>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</li>
  }
</ul>

<p>@Html.ActionLink("Add Stylist", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>

